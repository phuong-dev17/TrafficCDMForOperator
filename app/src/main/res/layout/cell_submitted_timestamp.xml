<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="4dp"
    style="@style/Widget.Material3.CardView.Outlined">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageViewObjectInConcern"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:src="@drawable/broken_image_24dp"
            android:background="@color/primary"
            android:tint="@color/primary_light"
            android:scaleType="centerInside"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textViewObjectInConcern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/imageViewObjectInConcern"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="64dp"
            tools:text="Object in concern"
            android:textStyle="bold"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textViewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/imageViewObjectInConcern"
            app:layout_constraintTop_toBottomOf="@id/textViewObjectInConcern"
            android:layout_marginStart="64dp"
            tools:text="Description"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>